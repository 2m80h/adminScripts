Get-WmiObject Win32_Process -ComputerName "ComputerName" -Filter "name = 'EXE Name Here'" | Select-Object @{n="CommandLine";e={$_.CommandLine.substring(0, 45)}},@{n="Memory(mb)";e={$_.WorkingSetSize/1kb}},@{n='CreationDate'; e={$_.ConvertToDateTime($_.CreationDate)}}, @{n='Hours'; e={((get-date) - ($_.ConvertToDateTime($_.CreationDate))).TotalHours.tostring("#.#")}},processid | ft -Autosize
